<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="250.0" prefWidth="270.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.RentAddController">
    <children>
        <Spinner fx:id="spnId" editable="true" initialValue="0" max="2000000000" min="0" />
        <TextField fx:id="txtCarId" promptText="Car ID" />
        <VBox alignment="CENTER" prefHeight="30.0" prefWidth="100.0">
            <children>
                <Label text="Date of rent:" />
            </children>
        </VBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <TextField fx:id="txtDayOfTransaction" promptText="Day" />
                <TextField fx:id="txtMonthOfTransaction" promptText="Month" />
                <TextField fx:id="txtYearOfTransaction" promptText="Year" />
            </children>
        </HBox>
        <VBox alignment="CENTER" prefHeight="30.0" prefWidth="100.0">
            <children>
                <Label text="Time of rent:" />
            </children>
        </VBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <TextField fx:id="txtHour" alignment="CENTER" maxWidth="60.0" promptText="Hour" />
                <TextField fx:id="txtMinutes" alignment="CENTER" maxWidth="60.0" promptText="Minutes" />
            </children>
        </HBox>
        <TextField fx:id="txtKilometers" promptText="Kilometers" />
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
            <children>
                <Button fx:id="btnAdd" onAction="#btnAddClick" text="Add" />
                <Button fx:id="btnCancel" onAction="#btnCancelClick" text="Cancel" />
            </children>
        </VBox>
    </children>
</VBox>